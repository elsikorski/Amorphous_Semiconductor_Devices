	journal = {The Journal of Physical Chemistry C},
	mendeley-groups = {AIMD},
	month = {mar},
	number = {11},
	pages = {5783--5789},
	publisher = {American Chemical Society},
	title = {{Theoretical Investigation on Incorporation and Diffusion Properties of Xe in Uranium Mononitride}},
