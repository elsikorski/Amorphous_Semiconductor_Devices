mendeley-groups = {Amorphous Semiconductor Devices/Density of States,Amorphous Semiconductor Devices/Amorphous Modeling,Amorphous Semiconductor Devices/Amorphous Modeling/Project References},
number = {7467},
pages = {1--8},
pmid = {26105012},
publisher = {Nature Publishing Group},
title = {{Aging mechanisms in amorphous phase-change materials}},
url = {http://dx.doi.org/10.1038/ncomms8467},
